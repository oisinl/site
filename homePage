      // Initialize and add the map
      function initMap() {
        // The location
        const athlone = { lat: 53.4239, lng: -7.9407 };
        const royalportrush = { lat: 55.1997, lng: -6.6354 };
        const portmarnock = { lat: 53.4072, lng: -6.1238 };
        const royalcountydown = { lat: 54.2179, lng: -5.8832 };
        const lahinch = { lat: 52.9402, lng: -9.3536 };
        const tralee = { lat: 52.3013, lng: -9.8578 };
        const ballybunion = { lat: 52.4948, lng: -9.6749 };
        const waterville = { lat: 51.8295, lng: -10.1745 };
        const countylouth = { lat: 53.7372, lng: -6.2672 };
        const european = { lat: 52.8597, lng: -6.0691 };
        const adare = { lat: 52.5639, lng: -8.7786 };
        // The map, centered at Athlone
        const map = new google.maps.Map(document.getElementById("map"), {
          zoom: 6.95,
          center: athlone,
        });
        
        const marker1 = new google.maps.Marker({
          position: royalportrush,
          map: map,
        });
        const marker2 = new google.maps.Marker({
          position: portmarnock,
          map: map,
        });
        const marker3 = new google.maps.Marker({
          position: royalcountydown,
          map: map,
        });
        const marker4 = new google.maps.Marker({
          position: lahinch,
          map: map,
        });
        const marker5 = new google.maps.Marker({
          position: tralee,
          map: map,
        });
        const marker6 = new google.maps.Marker({
          position: ballybunion,
          map: map,
        });
        const marker7 = new google.maps.Marker({
          position: waterville,
          map: map,
        });
        const marker8 = new google.maps.Marker({
          position: countylouth,
          map: map,
        });
        const marker9 = new google.maps.Marker({
          position: european,
          map: map,
        });
        const marker10 = new google.maps.Marker({
